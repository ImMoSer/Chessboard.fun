{
    "workbench.colorCustomizations": {
        "errorLens.errorBackground": "#ff000020",
        "errorLens.warningBackground": "#ffb70020"
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit",
        "source.organizeImports": "explicit"
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "vue"
    ],
    "eslint.workingDirectories": [
        {
            "mode": "auto"
        }
    ],
    "files.associations": {
        "*.json": "jsonc"
    },
    "editor.formatOnSave": true,
    // Нативного включения проверки всего проекта
    "typescript.tsserver.experimental.enableProjectDiagnostics": true,
    "vue.server.diagnosticModel": "project",
    "typescript.validate.enable": true,
    "typescript.tsc.autoTasks": "on",
    "eslint.run": "onType",
    "eslint.problems.shortenToSingleLine": false
}